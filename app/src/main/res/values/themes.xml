<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.HoopHubSkeleton" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- Uncomment and set primary color if needed -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorAccent">@color/highlight</item>
        <item name="colorPrimary">@color/app_background</item>
        <item name="colorSurface">@color/button</item>
        <item name="colorSecondary">@color/text_icon_dark</item>
        <item name="colorTertiary">@color/button</item>
        <item name="android:textColor">@color/text_icon_dark</item>
        <item name="android:navigationBarColor">@color/text_icon_dark</item>
        <item name="android:windowFullscreen">false</item> <!-- Ensure status bar is visible -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/text_icon_dark</item><!-- Light icons -->

    </style>

    <!-- Application theme -->
    <style name="Theme.HoopHubSkeleton" parent="Base.Theme.HoopHubSkeleton" />

    <!-- Custom RadioButton Style -->
    <style name="CustomRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/highlight</item>
    </style>

    <style name="OrangeButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/highlight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for BottomNavigationView -->
    <style name="CustomBottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/button</item>
        <item name="itemIconTint">@color/highlight</item>
        <item name="itemTextColor">@color/unimplemented</item>
    </style>


    <!-- Custom Menu Style -->
    <style name="CustomMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/highlight</item>
        <item name="android:textColor">@color/unimplemented</item>
    </style>



</resources>
