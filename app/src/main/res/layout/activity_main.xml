<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navGraph="@navigation/nav_graph"
        app:defaultNavHost="true"
        android:name="androidx.navigation.fragment.NavHostFragment" />


    <!-- Top Menu -->
    <RelativeLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="30dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/top_tab_menu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/app_background"
            app:tabBackground="@drawable/tab_circle_indicator"
            app:tabGravity="fill"
            app:tabIconTint="@color/text_icon_dark"
            app:tabIndicator="@android:color/transparent"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="center"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/highlight"
            app:tabTextColor="@color/text_icon_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/content_search"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_tab_menu"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:text="Current Location"
            android:textColor="@color/text_icon_dark"
            app:backgroundTint="@color/app_background"
            app:icon="@drawable/explore_icon"
            app:iconTint="@color/text_icon_dark"
            app:strokeColor="@color/text_icon_dark"
            app:strokeWidth="2dp" />
    </RelativeLayout>

    <!-- Top ViewPager2 for Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/top_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_view_pager" />

    <!-- Content Area for Bottom Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/bottom_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/top_view_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_tab_menu" />

    <!-- Bottom Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottom_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/app_background"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIconTint="@color/text_icon_dark"
        app:tabIndicator="@android:color/transparent"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/text_icon_dark"
        app:tabTextColor="@color/text_icon_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
